
<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <style type="text/css">

        @page {
            counter-increment: page;

            -ro-scale-content: none;
            hyphens: auto;

            size: A4 portrait;
            margin:15mm 14mm 14mm 14mm;

        }

    </style>
    <style type="text/css" media="screen">
        body {
            background-color: #d6ffb5;
        }

        .site {
            margin:0 auto;
            width: 70vw;
            padding:1cm 0 1cm 0;
        }

        .page {
            width: 21cm;
            padding:0.5cm 0 0.5cm 0;
            background:#FFF;
            -webkit-box-shadow: 0 0 4px 4px rgba(0, 0, 0, 0.2);
            -moz-box-shadow: 0 0 4px 4px rgba(0, 0, 0, 0.2);
            box-shadow: 0 0 4px 4px rgba(0, 0, 0, 0.2);

            position: relative;
        }

        h1, h2, p, a, span, tr, th, td, strong {
            font-family: Arial, sans-serif;
        }   

        .club-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .club {
            
            padding: 10px;
            border: 1px solid #88b366;
            border-radius: 5px;
            width: 200px;
            text-align: center;
            background-color: #94bf71;
            box-shadow: 0 8px 8px 8px rgba(0, 0, 0, 0.2);
        }

        .club a {
            text-decoration: none;
            color: #000;
            font-weight: bold;
            
        }

        .club logo_wrapper {
            width: 100%;
            height: 100px;
            overflow: hidden;
            padding: 5px;
        }

        .club img {
           height: 200px;
            
        }


        /*** detail-page ***/

        .details {
            display: flex;
            justify-content: start;
            gap: 20px;
            align-items: center;
            flex-direction: row;
            width: 70vw;
        }

        #detail-info {
            display: flex;
            width: 375px;
            gap: 5px;
            justify-content: start;
            align-items: start;
            flex-direction: column;
        }

        #detail-info img {
            width: 200px;
            height: 200px;
            margin: 0 0 10px 0;
        }

        #detail-info p {
            margin: 0 0 10px 0;
        }

        #detail-map {
            width: 100%;
        }

        #detail-map span {
            display: block;
            margin: 10px 0;
        }

        #map  {
            height: 400px;
            border-radius: 5px;
            box-shadow: 0 4px 8px 8px rgba(0, 0, 0, 0.2);
        }

        table {
            width: auto;
            margin: 20px 0;
            border-collapse: collapse;
        }

        tr {
            text-align: left;
        }

        tr:nth-child(odd) {
            background-color: #96c294;
        }

        tr:nth-child(even) {
            background-color:rgb(194, 228, 193);
        }

        th, td {
            border: 1px solid #000;
            padding: 5px;
        }

        th:nth-child(1) {
            width: 200px;
        }

    </style> 

    {% if printermarks is defined and printermarks == true %}
        <link rel="stylesheet" type="text/css" href="/bundles/pimcoreadmin/css/print/print-printermarks.css" media="print" />
    {% endif %}

</head>

<body>
    <header>
        <nav>
            {# get root node if there is no document defined (for pages which are routed directly through static route) #}
            {% if not document is defined or not document %}
                {% set document = pimcore_document(1) %}
            {% endif %}

            {# get the document which should be used to start in navigation | default home #}
            {% set navStartNode = document.getProperty('navigationRoot') %}
            {% if not navStartNode is instanceof('\\Pimcore\\Model\\Document\\Page') %}
                {% set navStartNode = pimcore_document(1) %}
            {% endif %}

            {% set mainNavigation = pimcore_build_nav({
                active: document,
                root: navStartNode
            }) %}

            {# later you can render the navigation #}
            {{ pimcore_render_nav(mainNavigation, 'menu', 'renderMenu', {
                maxDepth: 1,
                ulClass: 'nav navbar-nav'
            }) }}
        </nav>
    </header>
<div class="site">
    {{ block('content') }}
</div>

</body>
</html>
